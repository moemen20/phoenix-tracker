rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // TEMPORARY: Allow all authenticated users to upload/download for testing
    match /files/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read access to public files
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}