rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Personal files collection - users can only access their own files
    match /personalFiles/{documentId} {
      allow read, write: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.userId;
    }

    // Allow all authenticated users to read/write other collections for now
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}